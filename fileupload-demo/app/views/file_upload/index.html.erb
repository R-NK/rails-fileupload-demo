<div class="upload-form">
  <%= form_for(@upload_file, :url => { :controller => :file_upload, :action => :create }, method: :post, :html => {:class => 'dropzone', :id => 'upload-dropzone'}) do %>
    <div class="fallback">
      <%= file_field_tag 'media', multiple: true %>
    </div>
  <% end %>
</div>
<div id="file-list">
  <% @upload_files.each do |file| %>
    <%= render 'uploaded_file', file: file %>
  <% end %>
</div>